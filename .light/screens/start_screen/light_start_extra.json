{
  "namespace": "light_start_extra",
  "header": {
    "size": [
      "100%",
      "25px"
    ],
    "offset": [
      0,
      "-2px"
    ],
    "texture": "textures/ui/header_bar",
    "type": "image",
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "$header_text": "START",
    "controls": [
      {
        "player_information@light_start_extra.player_information": {}
      },
      {
        "x_image@common.light_close_button": {
          "layer": 200,
          "anchor_from": "right_middle",
          "anchor_to": "right_middle",
          "offset": [
            -2,
            -1
          ],
          "$pressed_button_name": "button.menu_exit"
        }
      },
      {
        "header_label": {
          "anchor_from": "center",
          "anchor_to": "center",
          "color": "black",
          "layer": 1,
          "max_size": [
            "95%",
            10
          ],
          "font_type": "MinecraftTen",
          "text": "$header_text",
          "text_alignment": "center",
          "type": "label",
          "offset": [
            0,
            -2
          ]
        }
      }
    ]
  },
  "player_information": {
    "type": "panel",
    "anchor_from": "left_middle",
    "anchor_to": "left_middle",
    "offset": [
      2,
      -2
    ],
    "layer": 2,
    "size": [
      20,
      20
    ],
    "controls": [
      {
        "gamertag_pic_and_label": {
          "bindings": [
            {
              "binding_name": "#gamertag_pic_and_label_visible",
              "binding_name_override": "#visible"
            }
          ],
          "controls": [
            {
              "gamerpic_with_border": {
                "controls": [
                  {
                    "gamerpic": {
                      "bindings": [
                        {
                          "binding_name": "#gamerpic_texture_path",
                          "binding_name_override": "#texture"
                        },
                        {
                          "binding_name": "#gamerpic_texture_location_type",
                          "binding_name_override": "#texture_file_system"
                        }
                      ],
                      "layer": 2,
                      "offset": [
                        0,
                        2
                      ],
                      "size": [
                        14,
                        13
                      ],
                      "type": "image"
                    }
                  }
                ],
                "size": [
                  "100%c",
                  "100%"
                ],
                "type": "panel"
              }
            },
            {
              "spacer": {
                "size": [
                  1,
                  0
                ],
                "type": "panel"
              }
            },
            {
              "label_panel": {
                "controls": [
                  {
                    "gamertag_label": {
                      "alpha": 0.8,
                      "bindings": [
                        {
                          "binding_name": "#gamertag_label"
                        }
                      ],
                      "color": [
                        1,
                        1,
                        1
                      ],
                      "layer": 2,
                      "offset": [
                        0,
                        "25%"
                      ],
                      "shadow": true,
                      "size": [
                        "default",
                        "120%"
                      ],
                      "text": "#gamertag_label",
                      "type": "label"
                    }
                  }
                ],
                "size": [
                  "100%c",
                  "100%"
                ],
                "type": "panel"
              }
            }
          ],
          "orientation": "horizontal",
          "size": [
            10,
            10
          ],
          "type": "stack_panel"
        }
      }
    ]
  },
  "text_stuffs@light_bg.light_text_bg": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "size": [
      "default",
      20
    ],
    "offset": [
      0,
      -10
    ],
    "controls": [
      {
        "pl_text": {
          "type": "label",
          "text": "Project Light V2.  ",
          "font_type": "smooth",
          "size": [
            "default",
            18
          ]
        }
      },
      {
        "version": {
          "type": "label",
          "text": "#version",
          "font_type": "smooth",
          "size": [
            "default",
            18
          ],
          "bindings": [
            {
              "binding_name": "#version"
            }
          ]
        }
      },
      {
        "pl_copyright": {
          "type": "label",
          "text": "  Â© Project Light 2022-2023.",
          "font_type": "smooth",
          "size": [
            "default",
            18
          ]
        }
      }
    ]
  },
  "logo": {
    "type": "image",
    "texture": ".light/textures/logo",
    "size": [
      50,
      50
    ],
    "offset": [
      -50,
      0
    ],
    "layer": 1
  }
}